<body class=" login">
    <!-- BEGIN LOGO -->
    <div class="logo">
        <a href="index.html">
            <img src="~/Content/pages/img/logo-big-white.png" style="height: 17px;" alt="" />
        </a>
    </div>
    <!-- END LOGO -->
    <!-- BEGIN LOGIN -->
    <div class="content">
        <!-- BEGIN LOGIN FORM -->
        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = Request.QueryString["ReturnUrl"] }, FormMethod.Post, new { @class = "login-form", name = "form", role = "form", id = "save" }))
        {
            @Html.AntiForgeryToken()
            <div class="form-title">
                <span class="form-subtitle">Giriş.</span>
            </div>
            <div class="alert alert-danger display-hide">
                <button class="close" data-close="alert"></button>
                @Html.ValidationSummary(true, "", new { })

                @*<span> Kullanıcı adı ve şifreyi giriniz. </span>*@
            </div>
            <div class="form-group">
                <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
                <label class="control-label visible-ie8 visible-ie9">Kullanıcı Adı</label>
                @Html.TextBoxFor(model => model.UserName, new { @class = "form-control form-control-solid placeholder-no-fix", @required = "required", @placeholder = "Kullanıcı Adı", @name = "username", type = "text", @autocomplete = "off" })
                @*<input class="form-control form-control-solid placeholder-no-fix" type="text" autocomplete="off" placeholder="Kullanıcı Adı" name="username" />*@
            </div>
            <div class="form-group">
                <label class="control-label visible-ie8 visible-ie9">Şifre</label>
                @Html.TextBoxFor(model => model.Password, new { @class = "form-control form-control-solid placeholder-no-fix", @required = "required", @type = "password", @autocomplete = "off", @placeholder = "Şifre", @name = "password" })
                @*<input class="form-control form-control-solid placeholder-no-fix" type="password" autocomplete="off" placeholder="Şifre" name="password" />*@
            </div>
            <div class="form-actions">
                <button type="submit" class="btn red btn-block uppercase">Giriş</button>
            </div>
            <div class="form-actions">
                <div class="pull-right forget-password-block">
                    <a href="javascript:;" id="forget-password" class="forget-password">Şifremi Unuttum</a>
                </div>
            </div>

            <div class="create-account">
                <p>
                    <a href="javascript:;" class="btn-primary btn" id="register-btn">Bir Hesap Oluştur</a>
                </p>
            </div>
        }

        <!-- END LOGIN FORM -->
        <!-- BEGIN FORGOT PASSWORD FORM -->
        <form class="forget-form" action="index.html" method="post">
            <div class="form-title">
                <span class="form-title">Şifremi Unuttum</span>
                <span class="form-subtitle">Email adresini girerek resetle.</span>
            </div>
            <div class="form-group">
                <input class="form-control placeholder-no-fix" type="text" autocomplete="off" placeholder="Email" name="email" />
            </div>
            <div class="form-actions">
                <button type="button" id="back-btn" class="btn btn-default">Geri</button>
                <button type="submit" class="btn btn-primary uppercase pull-right">Gönder</button>
            </div>
        </form>
        <!-- END FORGOT PASSWORD FORM -->
        <!-- BEGIN REGISTRATION FORM -->
        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "register-form", name = "register", role = "form", id = "register" }))
        {
            @Html.AntiForgeryToken()
            <div class="form-title">
                <span class="form-title">Kayıt Ol</span>
            </div>
            <p class="hint"> Kişisel bilgilerinizi giriniz. </p>
            <div class="form-group">
                <label class="control-label visible-ie8 visible-ie9">İsim</label>
                @Html.TextBoxFor(model => model.FirstName, new { @class = "form-control placeholder-no-fix", @type = "text", @required = "required", @placeholder = "İsim", @name = "fullname" })
                @*<input class="form-control placeholder-no-fix" type="text" placeholder="İsim" name="fullname" />*@
            </div>
            <div class="form-group">
                <label class="control-label visible-ie8 visible-ie9">Soyisim</label>
                @Html.TextBoxFor(model => model.LastName, new { @class = "form-control placeholder-no-fix", @type = "text", @required = "required", @placeholder = "Soyisim", @name = "Lastname" })
                @*<input class="form-control placeholder-no-fix" type="text" placeholder="Soyisim" name="Lastname" />*@
            </div>
            <div class="form-group">
                <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
                <label class="control-label visible-ie8 visible-ie9">Email</label>
                @Html.TextBoxFor(model => model.Email, new { @class = "form-control placeholder-no-fix", @type = "email", @required = "required", @placeholder = "Email", @name = "email" })
                @*<input class="form-control placeholder-no-fix" type="text" placeholder="Email" name="email" />*@
            </div>
            <p class="hint"> Hesap bilgilerinizi giriniz. </p>
            <div class="form-group">
                <label class="control-label visible-ie8 visible-ie9">Kullanıcı Adı</label>
                @Html.TextBoxFor(model => model.UserName, new { @class = "form-control placeholder-no-fix", @type = "text", @required = "required", @placeholder = "Kullanıcı", @name = "username", @autocomplete = "off" })
                @*<input class="form-control placeholder-no-fix" type="text" autocomplete="off" placeholder="Kullanıcı Adı" name="username" />*@
            </div>
            <div class="form-group">
                <label class="control-label visible-ie8 visible-ie9">Şifre</label>
                @Html.TextBoxFor(model => model.Password, new { @class = "form-control placeholder-no-fix", @type = "password", @required = "required", @placeholder = "Şifre", @name = "password", @autocomplete = "off", @id = "register_password" })
                @*<input class="form-control placeholder-no-fix" type="password" autocomplete="off" id="register_password" placeholder="Şifre" name="password" />*@
            </div>
            <div class="form-group">
                <label class="control-label visible-ie8 visible-ie9">Şifre Tekrar</label>
                @Html.TextBoxFor(model => model.ConfirmPassword, new { @class = "form-control placeholder-no-fix", @type = "password", @required = "required", @placeholder = "Şifre Tekrar", @name = "rpassword", @autocomplete = "off" })
                @*<input class="form-control placeholder-no-fix" type="password" autocomplete="off" placeholder="Şifre Tekrar" name="rpassword" />*@
            </div>
            <div class="form-actions">
                <button type="button" id="register-back-btn" class="btn btn-default">Geri</button>
                <button type="submit" id="register-submit-btn" class="btn red uppercase pull-right">Kayıt ol</button>
            </div>
        }
        <!-- END REGISTRATION FORM -->
